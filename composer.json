{
  "name": "umn/d8-composer",
  "description": "Project template for Drupal 8 sites built with the Lightning distribution.",
  "type": "project",
  "license": "GPL-2.0+",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "drupal/drupal-extension": "^3.2",
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "drupal/coder": "8.*",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "symfony/css-selector": "~2.8",
    "behat/behat": "^3.0",
    "se/selenium-server-standalone": "^2.53"
  },
  "require": {
    "composer/installers": "^1.0",
    "drupal/console": "^1.0",
    "drupal-composer/drupal-scaffold": "^2.0.0",
    "cweagans/composer-patches": "^1.6.0",
    "acquia/acquia-sdk-php": "^0.10.8",
    "acquia/lightning": "~2.0.0",
    "drupal/paragraphs": "^1.0",
    "drupal/simplesamlphp_auth": "^3.0@dev",
    "drupal/rules": "^3.0@alpha",
    "drupal/google_analytics": "^2.1",
    "drupal/devel": "^1.0@RC",
    "drupal/radix_layouts": "^3.0",
    "drupal/back_to_top": "^1.0@beta",
    "drupal/restui": "^1.13",
    "drupal/admin_toolbar": "^1.18",
    "drupal/fontyourface": "^3.0",
    "drupal/address": "^1.0@RC",
    "drupal/linkit": "^4.2",
    "drupal/robotstxt": "^1.0",
    "drupal/simple_gmap": "^1.2",
    "umn/umn_features": "8.1.2",
    "umn/d8_configurations": "dev-master",
    "umn/lightning_umn": "dev-master",
    "umn/cog_umn": "dev-master",
    "umn/bootstrap_umn": "dev-master",
    "umn/umn_search": "dev-master",
    "symfony/intl": "^3.2",
    "drupal/mathjax": "^2.6",
    "drupal/redirect": "^1.0@alpha",
    "drupal/imagick": "^1.0",
    "drupal/nice_menus": "^1.0@beta",
    "drupal/fast_404": "^1.0@alpha"
  },
  "repositories": {
    "drupal-packagist": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    "umn-features": {
      "type": "git",
      "url": "git@github.umn.edu:drupalmodules/d8-features.git"
    },
    "umn-configs": {
      "type": "git",
      "url": "git@github.umn.edu:drupalmodules/d8-configurations.git"
    },
    "lightning_umn": {
      "type": "git",
      "url": "git@github.umn.edu:drupalprofiles/lightning_umn.git"
    },
    "cog-umn": {
      "type": "git",
      "url": "git@github.umn.edu:drupalthemes/cog-umn.git"
    },
    "bootstrap-umn": {
      "type": "git",
      "url": "git@github.umn.edu:drupalthemes/bootstrap-umn.git"
    },
    "umn-search": {
      "type": "git",
      "url": "git@github.umn.edu:drupalmodules/umn-search.git"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "Acquia\\Lightning\\ScriptHandler::deployLibraries"
    ],
    "post-update-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "Acquia\\Lightning\\ScriptHandler::deployLibraries"
    ]
  },
  "config": {
    "bin-dir": "bin/"
  },
  "autoload": {
    "classmap": [
      "scripts/ScriptHandler.php"
    ]
  },
  "extra": {
    "installer-paths": {
      "docroot/core": [
        "type:drupal-core"
      ],
      "docroot/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "docroot/modules/custom/{$name}": [
        "type:drupal-module-custom"
      ],
      "docroot/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "docroot/profiles/custom/{$name}": [
        "type:drupal-profile-custom"
      ],
      "docroot/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "docroot/themes/custom/{$name}": [
        "type:drupal-theme-custom"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "patches-file": "composer.patches.json",
    "enable-patching": true
  }
}
